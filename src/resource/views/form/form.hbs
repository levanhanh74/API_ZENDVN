<form class="border p-4" action="/form/post" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Title</label>
        <input type="text" name="title" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Description</label>
        <input type="text" name="description" class="form-control" id="exampleInputPassword1">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
        <label for="formFile" class="form-label">Choose file</label>
        <input class="form-control" type="file" name="img" id="formFile">
        <img src={{this}} alt={{fileName}}>
    </div>
    <button type="submit" class=" submit btn btn-primary">Submit</button>
</form>


<div class="container p-0 pt-5">
    <div class="row">
        {{#each courses }}
        <div class="col-sm-6 col-lg-4 mt-2">
            <div class="card">
                <a href="/form/detail/{{this._id}}"> <img src={{this.img}} class="card-img-top" alt={{this.title}}></a>
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/form/detail/{{this._id}}" class="btn btn-primary">Detail </a>
                </div>
            </div>
        </div>
        {{/each}}
        {{title}}
    </div>
</div>